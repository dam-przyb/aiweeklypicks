---
import type { ReportsListQuery, PicksListQuery } from "@/types";
import { buildQueryString, buildPicksQueryString } from "@/lib/view-helpers";

interface Props {
  page: number;
  pageSize: number;
  totalPages: number;
  totalItems: number;
  currentQuery: ReportsListQuery | PicksListQuery;
  itemLabel?: string;
}

const { page, pageSize, totalPages, totalItems, currentQuery, itemLabel = "reports" } = Astro.props;

// Don't render if only one page
if (totalPages <= 1) {
  return null;
}

// Determine which builder to use based on query type
const isPicksQuery = "ticker" in currentQuery || "exchange" in currentQuery || "side" in currentQuery;
const buildHref = isPicksQuery ? buildPicksQueryString : buildQueryString;

// Build URLs for previous and next pages
const prevUrl = page > 1 ? buildHref({ ...currentQuery, page: page - 1 } as any) : null;

const nextUrl = page < totalPages ? buildHref({ ...currentQuery, page: page + 1 } as any) : null;

// Calculate range of items shown
const startItem = (page - 1) * pageSize + 1;
const endItem = Math.min(page * pageSize, totalItems);

// Generate array of page numbers to show
const getPageNumbers = () => {
  const pages: (number | "ellipsis")[] = [];
  const maxVisible = 7; // Show up to 7 page numbers

  if (totalPages <= maxVisible) {
    // Show all pages if there are few enough
    for (let i = 1; i <= totalPages; i++) {
      pages.push(i);
    }
  } else {
    // Always show first page
    pages.push(1);

    // Calculate start and end of middle range
    let start = Math.max(2, page - 1);
    let end = Math.min(totalPages - 1, page + 1);

    // Add ellipsis after first page if needed
    if (start > 2) {
      pages.push("ellipsis");
      start = Math.max(start, page - 1);
    }

    // Add middle pages
    for (let i = start; i <= end; i++) {
      pages.push(i);
    }

    // Add ellipsis before last page if needed
    if (end < totalPages - 1) {
      pages.push("ellipsis");
    }

    // Always show last page
    pages.push(totalPages);
  }

  return pages;
};

const pageNumbers = getPageNumbers();
---

<nav class="flex items-center justify-between bg-white rounded-lg shadow px-4 py-3 sm:px-6" aria-label="Pagination">
  <!-- Mobile: Simple prev/next -->
  <div class="flex flex-1 justify-between sm:hidden">
    {
      prevUrl ? (
        <a
          href={prevUrl}
          class="relative inline-flex items-center rounded-md px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
        >
          Previous
        </a>
      ) : (
        <span class="relative inline-flex items-center rounded-md px-4 py-2 text-sm font-medium text-gray-400 bg-gray-100 border border-gray-200 cursor-not-allowed">
          Previous
        </span>
      )
    }

    {
      nextUrl ? (
        <a
          href={nextUrl}
          class="relative ml-3 inline-flex items-center rounded-md px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
        >
          Next
        </a>
      ) : (
        <span class="relative ml-3 inline-flex items-center rounded-md px-4 py-2 text-sm font-medium text-gray-400 bg-gray-100 border border-gray-200 cursor-not-allowed">
          Next
        </span>
      )
    }
  </div>

  <!-- Desktop: Full pagination -->
  <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
    <div>
      <p class="text-sm text-gray-700">
        Showing <span class="font-medium">{startItem}</span> to{" "}
        <span class="font-medium">{endItem}</span> of{" "}
        <span class="font-medium">{totalItems}</span>
        {itemLabel}
      </p>
    </div>

    <div>
      <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
        <!-- Previous Button -->
        {
          prevUrl ? (
            <a
              href={prevUrl}
              class="relative inline-flex items-center rounded-l-md px-3 py-2 text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
              aria-label="Go to previous page"
            >
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path
                  fill-rule="evenodd"
                  d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z"
                  clip-rule="evenodd"
                />
              </svg>
              <span class="ml-1">Previous</span>
            </a>
          ) : (
            <span
              class="relative inline-flex items-center rounded-l-md px-3 py-2 text-gray-400 bg-gray-100 border border-gray-200 cursor-not-allowed"
              aria-disabled="true"
              aria-label="Previous page (disabled)"
            >
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path
                  fill-rule="evenodd"
                  d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z"
                  clip-rule="evenodd"
                />
              </svg>
              <span class="ml-1">Previous</span>
            </span>
          )
        }

        <!-- Page Numbers -->
        {
          pageNumbers.map((pageNum) => {
            if (pageNum === "ellipsis") {
              return (
                <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 bg-white border border-gray-300">
                  ...
                </span>
              );
            }

            const isCurrentPage = pageNum === page;
            const pageUrl = buildHref({
              ...currentQuery,
              page: pageNum,
            } as any);

            if (isCurrentPage) {
              return (
                <span
                  aria-current="page"
                  class="relative z-10 inline-flex items-center bg-blue-600 px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600"
                >
                  {pageNum}
                </span>
              );
            }

            return (
              <a
                href={pageUrl}
                class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-900 bg-white border border-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
                aria-label={`Go to page ${pageNum}`}
              >
                {pageNum}
              </a>
            );
          })
        }

        <!-- Next Button -->
        {
          nextUrl ? (
            <a
              href={nextUrl}
              class="relative inline-flex items-center rounded-r-md px-3 py-2 text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
              aria-label="Go to next page"
            >
              <span class="mr-1">Next</span>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path
                  fill-rule="evenodd"
                  d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                  clip-rule="evenodd"
                />
              </svg>
            </a>
          ) : (
            <span
              class="relative inline-flex items-center rounded-r-md px-3 py-2 text-gray-400 bg-gray-100 border border-gray-200 cursor-not-allowed"
              aria-disabled="true"
              aria-label="Next page (disabled)"
            >
              <span class="mr-1">Next</span>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path
                  fill-rule="evenodd"
                  d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                  clip-rule="evenodd"
                />
              </svg>
            </span>
          )
        }
      </nav>
    </div>
  </div>
</nav>
