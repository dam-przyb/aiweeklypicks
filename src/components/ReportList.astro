---
import type { ReportListItemViewModel } from "@/types";
import ReportCard from "./ReportCard.astro";

interface Props {
  reports: ReportListItemViewModel[];
}

const { reports } = Astro.props;

// Don't render if no reports
if (!reports || reports.length === 0) {
  return null;
}
---

<section aria-label="Reports list" class="bg-white rounded-lg shadow">
  <div class="divide-y divide-gray-200 px-6">
    {reports.map((report) => <ReportCard report={report} />)}
  </div>
</section>
