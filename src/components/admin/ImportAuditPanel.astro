---
import type { ImportAuditDetailDTO } from "@/types";

interface Props {
  audit: ImportAuditDetailDTO;
}

const { audit } = Astro.props;

// Helper to format dates
function formatDateTime(dateString: string | null): string {
  if (!dateString) return "N/A";
  const date = new Date(dateString);
  return date.toLocaleString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
    hour: "2-digit",
    minute: "2-digit",
    second: "2-digit",
    timeZoneName: "short",
  });
}

// Helper to calculate duration
function formatDuration(startedAt: string | null, finishedAt: string | null): string {
  if (!startedAt) return "N/A";
  if (!finishedAt) return "In Progress...";
  
  const start = new Date(startedAt);
  const finish = new Date(finishedAt);
  const durationMs = finish.getTime() - start.getTime();
  
  if (durationMs < 0) return "Invalid";
  
  if (durationMs < 1000) {
    return `${durationMs}ms`;
  }
  
  const durationSec = Math.floor(durationMs / 1000);
  if (durationSec < 60) {
    return `${durationSec}s`;
  }
  
  const minutes = Math.floor(durationSec / 60);
  const seconds = durationSec % 60;
  return `${minutes}m ${seconds}s`;
}

// Build report link - prefer slug route
const reportLink = audit.report_slug 
  ? `/reports/${audit.report_slug}`
  : audit.report_id 
    ? `/reports/id/${audit.report_id}` 
    : null;
---

<div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
  <!-- Panel Header -->
  <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900">Import Audit Details</h2>
      <span class={
        audit.status === "success"
          ? "inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800"
          : "inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800"
      }>
        {audit.status === "success" ? (
          <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
              clip-rule="evenodd"
            />
          </svg>
        ) : (
          <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z"
              clip-rule="evenodd"
            />
          </svg>
        )}
        {audit.status === "success" ? "Success" : "Failed"}
      </span>
    </div>
  </div>

  <!-- Panel Content -->
  <div class="px-6 py-5 space-y-6">
    <!-- Import ID and Filename -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <dt class="text-sm font-medium text-gray-500 mb-1">Import ID</dt>
        <dd class="text-sm text-gray-900 font-mono break-all">{audit.import_id}</dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500 mb-1">Filename</dt>
        <dd class="text-sm text-gray-900 flex items-center">
          <svg class="w-4 h-4 text-gray-400 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path
              fill-rule="evenodd"
              d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z"
              clip-rule="evenodd"
            />
          </svg>
          {audit.filename}
        </dd>
      </div>
    </div>

    <!-- Timing Information -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
      <div>
        <dt class="text-sm font-medium text-gray-500 mb-1">Started At</dt>
        <dd class="text-sm text-gray-900">{formatDateTime(audit.started_at)}</dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500 mb-1">Finished At</dt>
        <dd class="text-sm text-gray-900">{formatDateTime(audit.finished_at)}</dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500 mb-1">Duration</dt>
        <dd class="text-sm text-gray-900 font-semibold">{formatDuration(audit.started_at, audit.finished_at)}</dd>
      </div>
    </div>

    <!-- Technical Details -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <dt class="text-sm font-medium text-gray-500 mb-1">Checksum (SHA-256)</dt>
        <dd class="text-xs text-gray-900 font-mono break-all">{audit.source_checksum || "N/A"}</dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500 mb-1">Schema Version</dt>
        <dd class="text-sm text-gray-900 font-mono">{audit.schema_version || "N/A"}</dd>
      </div>
    </div>

    <!-- Uploader -->
    <div>
      <dt class="text-sm font-medium text-gray-500 mb-1">Uploaded By (User ID)</dt>
      <dd class="text-sm text-gray-900 font-mono">{audit.uploaded_by_user_id || "N/A"}</dd>
    </div>

    <!-- Error Message (if failed) -->
    {audit.status === "failed" && audit.error_message && (
      <div class="rounded-md bg-red-50 border border-red-200 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z"
                clip-rule="evenodd"
              />
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <h3 class="text-sm font-medium text-red-800 mb-1">Import Error</h3>
            <p class="text-sm text-red-700">{audit.error_message}</p>
          </div>
        </div>
      </div>
    )}

    <!-- Created Report Link (if success) -->
    {audit.status === "success" && reportLink && (
      <div class="rounded-md bg-green-50 border border-green-200 p-4">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                clip-rule="evenodd"
              />
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <h3 class="text-sm font-medium text-green-800 mb-2">Report Created Successfully</h3>
            <div class="space-y-1">
              {audit.report_id && (
                <div class="text-xs text-green-700">
                  <span class="font-medium">Report ID:</span>
                  <span class="ml-1 font-mono">{audit.report_id}</span>
                </div>
              )}
              {audit.report_slug && (
                <div class="text-xs text-green-700">
                  <span class="font-medium">Report Slug:</span>
                  <span class="ml-1 font-mono">{audit.report_slug}</span>
                </div>
              )}
            </div>
            <a
              href={reportLink}
              class="mt-3 inline-flex items-center text-sm font-medium text-green-700 hover:text-green-900 underline focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600 rounded transition-colors"
            >
              View Report
              <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    )}
  </div>

  <!-- Panel Footer / Actions -->
  <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
    <a
      href="/admin/imports"
      class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-gray-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 rounded transition-colors"
    >
      <svg class="mr-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Imports List
    </a>
  </div>
</div>

