<article class="prose prose-gray max-w-4xl mx-auto px-4 py-8">
  <header class="mb-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-2">{pageContent.title}</h1>
    <p class="text-sm text-gray-600">Last Updated: {pageContent.lastUpdated}</p>
  </header>

  <div class="space-y-6">
    {
      pageContent.sections.map((section) => (
        <section class="border-l-4 border-blue-500 pl-4">
          <h2 class="text-2xl font-semibold text-gray-900 mb-3">{section.heading}</h2>
          <p class="text-gray-700 leading-relaxed">{section.content}</p>
        </section>
      ))
    }
  </div>

  <!-- Language switcher at the bottom -->
  <footer class="mt-12 pt-8 border-t border-gray-200">
    <p class="text-sm text-gray-600 mb-3">
      {lang === "en" ? "View this page in:" : "Zobacz tę stronę w języku:"}
    </p>
    <div class="flex gap-4">
      <a
        href={`/legal/${variant}-en`}
        class={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${
          lang === "en" ? "bg-blue-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300"
        }`}
        aria-label="English version"
        aria-current={lang === "en" ? "page" : undefined}
      >
        English
      </a>
      <a
        href={`/legal/${variant}-pl`}
        class={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${
          lang === "pl" ? "bg-blue-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300"
        }`}
        aria-label="Wersja polska"
        aria-current={lang === "pl" ? "page" : undefined}
      >
        Polski
      </a>
    </div>
  </footer>
</article>

