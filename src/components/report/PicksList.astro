---
import type { PickItemVM } from "@/types";
import EmptyState from "@/components/EmptyState.astro";

interface Props {
  picks: PickItemVM[];
}

const { picks } = Astro.props;
---

<section class="mb-8">
  <h2 class="text-2xl font-bold text-gray-900 mb-4">Stock Picks</h2>

  {
    picks.length === 0 ? (
      <EmptyState />
    ) : (
      <div class="space-y-4">
        {picks.map((pick) => (
          <article class="bg-white border border-gray-200 rounded-lg p-5 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex flex-wrap items-start justify-between gap-4 mb-3">
              <div class="flex items-center gap-3">
                <h3 class="text-xl font-bold text-gray-900">{pick.ticker}</h3>
                <span class="text-sm text-gray-600 font-medium">{pick.exchange}</span>
                <span
                  class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                    pick.side === "long" ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800"
                  }`}
                  aria-label={`${pick.side} position`}
                >
                  {pick.side.toUpperCase()}
                </span>
              </div>

              <div class="text-right">
                <div class="text-sm text-gray-600 mb-1">Target Change</div>
                <div class={`text-2xl font-bold ${pick.targetChangePct >= 0 ? "text-green-600" : "text-red-600"}`}>
                  {pick.targetChangePctDisplay}
                </div>
              </div>
            </div>

            {pick.rationale && (
              <div class="text-gray-700 leading-relaxed">
                <span class="font-semibold text-gray-900">Rationale: </span>
                {pick.rationale}
              </div>
            )}
          </article>
        ))}
      </div>
    )
  }
</section>
