---
export const prerender = false;

import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ErrorBanner from "@/components/ErrorBanner.astro";
import EmptyState from "@/components/EmptyState.astro";
import ReportList from "@/components/ReportList.astro";
import PaginationControls from "@/components/PaginationControls.astro";
import { SortControls } from "@/components/SortControls";
import { normalizeReportsListQuery, mapReportDtoToViewModel, buildQueryString } from "@/lib/view-helpers";
import type { ReportsListResponseDTO, ReportListItemViewModel } from "@/types";

// Check for success/info messages from query params
const logoutStatus = Astro.url.searchParams.get("logout");
const verifiedStatus = Astro.url.searchParams.get("verified");

let successMessage: string | null = null;
let errorMessage: string | null = null;
let infoMessage: string | null = null;

if (logoutStatus === "success") {
  successMessage = "You have been successfully logged out.";
} else if (logoutStatus === "error") {
  errorMessage = "There was an issue logging you out, but you can try logging in again.";
}

if (verifiedStatus === "true") {
  successMessage = "Email verified successfully! You are now logged in.";
}

// Check if user is guest and should see info about limited access
const isGuest = !Astro.locals.user;
if (isGuest && !successMessage && !errorMessage) {
  infoMessage = "You're viewing reports older than 30 days. Sign in for full access to all reports and historical picks.";
}

// Normalize and validate query parameters
const normalizedQuery = normalizeReportsListQuery(Astro.url.searchParams);

// Build the internal API URL
const apiUrl = new URL("/api/reports", Astro.url.origin);
apiUrl.search = buildQueryString(normalizedQuery);

// Fetch data from internal API
let error: { code?: string; message?: string } | null = null;
let reports: ReportListItemViewModel[] = [];
let pagination = {
  page: 1,
  page_size: 20,
  total_items: 0,
  total_pages: 0,
};

try {
  const response = await fetch(apiUrl.toString(), {
    headers: {
      // Forward any auth cookies if present
      cookie: Astro.request.headers.get("cookie") || "",
    },
  });

  if (!response.ok) {
    const errorData = await response.json().catch(() => ({}));
    error = {
      code: errorData.code || "server_error",
      message: errorData.message || "An unexpected error occurred while loading reports.",
    };
  } else {
    const data: ReportsListResponseDTO = await response.json();
    reports = data.items.map(mapReportDtoToViewModel);
    pagination = {
      page: data.page,
      page_size: data.page_size,
      total_items: data.total_items,
      total_pages: data.total_pages,
    };
  }
} catch (err) {
  console.error("[Index Page] Failed to fetch reports:", err);
  error = {
    code: "server_error",
    message: "Failed to connect to the server. Please try again later.",
  };
}

// SEO metadata
const pageTitle = "AI Weekly Picks - Weekly Reports";
const pageDescription = "Browse our weekly reports with analysis and AI supported stock picks.";
---

<Layout title={pageTitle}>
  <!-- Skip to main content link for keyboard navigation -->
  <a
    href="#main-content"
    class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-blue-600 focus:text-white focus:rounded focus:shadow-lg"
  >
    Skip to main content
  </a>

  <!-- Header with Navigation -->
  <Header currentPath={Astro.url.pathname} />

  <!-- Main Content -->
  <main id="main-content" class="min-h-screen bg-gray-50 py-8" tabindex="-1">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Page Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Weekly Reports</h1>
        <p class="text-gray-600">Browse our latest AI-powered stock analysis and recommendations</p>
      </div>

      <!-- Success Message (conditional, auto-dismiss after 4 seconds) -->
      {successMessage && (
        <div 
          id="success-banner"
          class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4 flex items-start gap-3 transition-opacity duration-500" 
          role="status" 
          aria-live="polite"
        >
          <svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div class="flex-1">
            <p class="text-sm font-medium text-green-800">{successMessage}</p>
          </div>
        </div>
      )}

      <!-- Error Message from Auth (conditional, auto-dismiss after 5 seconds) -->
      {errorMessage && (
        <div 
          id="error-banner"
          class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4 flex items-start gap-3 transition-opacity duration-500" 
          role="alert" 
          aria-live="assertive"
        >
          <svg class="w-6 h-6 text-red-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div class="flex-1">
            <p class="text-sm font-medium text-red-800">{errorMessage}</p>
          </div>
        </div>
      )}

      <!-- Info Message for Guests (conditional) -->
      {infoMessage && (
        <div class="mb-6 bg-blue-50 border border-blue-200 rounded-lg p-4 flex items-start gap-3">
          <svg class="w-6 h-6 text-blue-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div class="flex-1">
            <p class="text-sm font-medium text-blue-900">{infoMessage}</p>
            <div class="mt-2 flex items-center gap-3">
              <a href="/auth/login" class="text-sm font-medium text-blue-600 hover:text-blue-800">
                Sign In →
              </a>
              <span class="text-gray-400">|</span>
              <a href="/auth/register" class="text-sm font-medium text-blue-600 hover:text-blue-800">
                Create Free Account →
              </a>
            </div>
          </div>
        </div>
      )}

      <!-- Error Banner (conditional) -->
      {error && <ErrorBanner errorCode={error.code} errorMessage={error.message} />}

      <!-- Content Area -->
      {!error && reports.length === 0 && <EmptyState />}

      {
        !error && reports.length > 0 && (
          <div class="space-y-6">
            <div class="bg-white rounded-lg shadow p-4">
              <SortControls
                client:load
                initialSort={normalizedQuery.sort || "published_at"}
                initialOrder={normalizedQuery.order || "desc"}
                otherParams={{
                  ...(normalizedQuery.week && { week: normalizedQuery.week }),
                  ...(normalizedQuery.version && { version: normalizedQuery.version }),
                  ...(normalizedQuery.published_before && { published_before: normalizedQuery.published_before }),
                  ...(normalizedQuery.published_after && { published_after: normalizedQuery.published_after }),
                }}
              />
            </div>

            <ReportList reports={reports} />

            <PaginationControls
              page={pagination.page}
              pageSize={pagination.page_size}
              totalPages={pagination.total_pages}
              totalItems={pagination.total_items}
              currentQuery={normalizedQuery}
            />
          </div>
        )
      }
    </div>
  </main>

  <!-- Footer -->
  <Footer />

  <!-- Auto-dismiss script for success/error messages -->
  <script>
    // Auto-dismiss success banner after 4 seconds
    const successBanner = document.getElementById('success-banner');
    if (successBanner) {
      setTimeout(() => {
        successBanner.style.opacity = '0';
        setTimeout(() => {
          // Remove query params from URL without reload
          const url = new URL(window.location.href);
          url.searchParams.delete('logout');
          url.searchParams.delete('verified');
          window.history.replaceState({}, '', url.toString());
          successBanner.remove();
        }, 500); // Wait for fade-out transition
      }, 4000); // Show for 4 seconds
    }

    // Auto-dismiss error banner after 5 seconds
    const errorBanner = document.getElementById('error-banner');
    if (errorBanner) {
      setTimeout(() => {
        errorBanner.style.opacity = '0';
        setTimeout(() => {
          // Remove query params from URL without reload
          const url = new URL(window.location.href);
          url.searchParams.delete('logout');
          window.history.replaceState({}, '', url.toString());
          errorBanner.remove();
        }, 500); // Wait for fade-out transition
      }, 5000); // Show for 5 seconds
    }
  </script>

  <!-- SEO Meta Tags -->
  <Fragment slot="head">
    <meta name="description" content={pageDescription} />
    <link rel="canonical" href={Astro.url.href} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:url" content={Astro.url.href} />

    <!-- Structured Data for SEO -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "CollectionPage",
        name: pageTitle,
        description: pageDescription,
        url: Astro.url.href,
      })}
    />
  </Fragment>
</Layout>
