---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import LegalContent from "../../components/legal/LegalContent.astro";

const currentPath = "/legal/privacy-en";
---

<Layout title="Privacy Policy - AI Weekly Picks">
  <Fragment slot="head">
    <meta name="description" content="Privacy Policy for AI Weekly Picks - Learn how we collect, use, and protect your personal data." />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={`${Astro.site}legal/privacy-en`} />
  </Fragment>

  <Header currentPath={currentPath} />

  <main class="min-h-screen bg-gray-50">
    <LegalContent variant="privacy" lang="en" />
  </main>

  <Footer />
</Layout>

